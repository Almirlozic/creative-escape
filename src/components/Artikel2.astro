---
const {image, title, tekst, overskrift} = Astro.props;
import { Image } from "astro:assets";
---


    <div class="artikel2">
        <Image src={image} alt={title} class="artikel-img" />
        <p>{tekst}</p>
        <h3>{overskrift}</h3>
    </div>


<style>
    .artikel2{
        padding: 0 50px;
    }
    .artikel-img{
        width: 100%;
        margin-top: 100px;
        filter: grayscale(100%);
    }
    .artikel-img:hover{
        filter: none;
    }
</style>