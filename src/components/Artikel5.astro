---
const {image, title, tekst, overskrift} = Astro.props;
import { Image } from "astro:assets";
---

    <div class="artikel5">
        <Image src={image} alt={title} class="artikel-img" />
        <p class="underline">{tekst}</p>
        <p>{overskrift}</p>
    </div>

    <style>




        .artikel5 img{
            width: 100%;
            height: 200px;
            object-fit: cover;
            filter: grayscale(100%);
        }
        .artikel5 img:hover{
            filter: none;
        }
        .underline{
            font-size: 0.8rem;
            font-weight: 600;
            text-decoration: underline;
        }
        .artikel-p{
            text-decoration: none;
        }
    </style>