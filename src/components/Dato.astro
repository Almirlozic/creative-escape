---
const {image, title, tekst} = Astro.props;
import { Image } from "astro:assets";
---


    <div class="artikel2">
        <Image src={image} alt={title} class="artikel-img" />
        <p>{tekst}</p>
    </div>

    <style>
        .artikel2{
            display: flex;
            gap: 1rem;
            padding: 30px 0;
        }
        .artikel2 p{
            padding: 0 30px;
            line-height: 1.5;
        }
    </style>